@model IEnumerable<Music_portal.Models.User>

@{
    ViewData["Title"] = "NewUsers";
}


<br />
<div class="text-center">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Resources.Resource.FirstName                    
                </th>
                <th>
                    @Resources.Resource.LastName                    
                </th>
                <th>
                    @Resources.Resource.Login                    
                </th>
                <th>
                    @Resources.Resource.Email                   
                </th>    
                <th>
                    @Resources.Resource.Access                  
                </th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                            @Html.DisplayFor(modelItem => item.Login)
                    </td>
                    <td>
                            @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                            @Html.DisplayFor(modelItem => item.Access)
                    </td>
                    <td>
                            <a asp-controller="Home" asp-action="EditUser" asp-route-id="@item.Id" class="link">@Resources.Resource.Edit</a> |
                            <a asp-controller="Home" asp-action="DeleteUser" asp-route-id="@item.Id" class="link">@Resources.Resource.Delete</a>
                    </td>
                </tr> 
            }
        }
        </tbody>
    </table>
</div>
<div class="but" style=" margin-left: 680px;">
    <a asp-controller="Home" asp-action="Index" class="link">@Resources.Resource.BackToList</a>
</div>

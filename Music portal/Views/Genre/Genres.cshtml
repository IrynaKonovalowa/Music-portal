@model IEnumerable<Music_portal.Models.Genre>

@{
    ViewData["Title"] = "Genres";
}
<div class="name"><span>Genres</span></div>
<hr />

    <div class="but">
        <a class="link" asp-controller="Genre" asp-action="CreateGenre">Add Genre</a>
    </div>

<div class="text-center">
    <table class="table" style="width: 500px;">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
            </tr>
        </thead>
        <tbody>
        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                        <td>
                            <a asp-action="EditGenre" asp-route-id="@item.Id" class="link">Edit</a> |
                            <a asp-action="DeleteGenre" asp-route-id="@item.Id" class="link">Delete</a>
                        </td>
                </tr> 
            }
        }
        </tbody>
    </table>    
</div>
<div  class="but" style=" margin-left: 330px;">
    <a asp-controller="Home" asp-action="Index" class="link">Back to list of songs</a>
</div>